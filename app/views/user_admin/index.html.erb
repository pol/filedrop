<table cellpadding='5'>
  <tr>
    <th>Name:</th>
    <th>Email:</th>
    <th>Login:</th>
    <th>Groups</th>
    <th colspan=3>Options:</th>
  </tr>
  <% unless !@users %>
    <% for user in @users %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.login %></td>
        <td><%= user.groups.map(&:name).join(", ") %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?',
                                         :method => :delete %></td>
      </tr>
    <% end %>
  <% end %>
</table> 
<%= will_paginate @users unless !@users %>
